<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:translationZ="1dp"
        android:layout_margin="16dp"
        android:src="@drawable/ic_arrow_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="#FFF"
        />

    <TextView
        android:id="@+id/text_header"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#855E53"
        android:gravity="center"
        android:paddingVertical="50dp"
        android:text="Cappuccino"
        android:textColor="#FFF"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/image_clock"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:contentDescription="clock"
        android:src="@drawable/ic_time"
        app:layout_constraintEnd_toStartOf="@id/image_favorite"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_header"
        app:tint="#855E53" />

    <TextView
        android:id="@+id/text_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="15 minutos"
        app:layout_constraintEnd_toEndOf="@+id/image_clock"
        app:layout_constraintStart_toStartOf="@+id/image_clock"
        app:layout_constraintTop_toBottomOf="@id/image_clock" />

    <ImageView
        android:id="@+id/image_favorite"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:contentDescription="favorite"
        android:src="@drawable/ic_favorite"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/image_clock"
        app:layout_constraintTop_toTopOf="@id/image_clock"
        app:tint="#855E53" />

    <TextView
        android:id="@+id/text_favorite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="54214"
        app:layout_constraintEnd_toEndOf="@+id/image_favorite"
        app:layout_constraintStart_toStartOf="@+id/image_favorite"
        app:layout_constraintTop_toBottomOf="@id/image_favorite" />

    <View
        android:id="@+id/view_divider"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp"
        android:background="#855E53"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_time" />

    <TextView
        android:id="@+id/text_description_item"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:paddingHorizontal="36dp"
        android:text="Uma simples e perfeitamente extraída dose de expresso misturado com leite fresco e chocolate que fazem esta bebida deliciosa"
        android:textSize="17sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view_divider" />


    <TextView
        android:id="@+id/text_ingredients_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:paddingHorizontal="16dp"
        android:text="Igredientes"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_description_item" />

    <ImageView
        android:id="@+id/image_arrow_item1"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/ic_arrow"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_ingredients_title"
        app:tint="#855E53" />

    <TextView
        android:id="@+id/text_ingredients_item1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:textSize="16sp"
        android:text="1 dose espresso"
        app:layout_constraintBottom_toBottomOf="@id/image_arrow_item1"
        app:layout_constraintTop_toTopOf="@id/image_arrow_item1"
        app:layout_constraintStart_toEndOf="@id/image_arrow_item1"
         />


    <ImageView
        android:id="@+id/image_arrow_item2"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/ic_arrow"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/image_arrow_item1"
        app:tint="#855E53" />

    <TextView
        android:id="@+id/text_ingredients_item2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:textSize="16sp"
        android:text="100ml de leite"
        app:layout_constraintBottom_toBottomOf="@id/image_arrow_item2"
        app:layout_constraintTop_toTopOf="@id/image_arrow_item2"
        app:layout_constraintStart_toEndOf="@id/image_arrow_item2"
        />


    <ImageView
        android:id="@+id/image_arrow_item3"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/ic_arrow"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/image_arrow_item2"
        app:tint="#855E53" />

    <TextView
        android:id="@+id/text_ingredients_item3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:textSize="16sp"
        android:text="1 colher de chocolate em pó"
        app:layout_constraintBottom_toBottomOf="@id/image_arrow_item3"
        app:layout_constraintTop_toTopOf="@id/image_arrow_item3"
        app:layout_constraintStart_toEndOf="@id/image_arrow_item3"
        />




</androidx.constraintlayout.widget.ConstraintLayout>